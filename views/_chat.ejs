

<div id="chat-box">
    <div id="chat-box-head"> <h2>Let's Chat </h2>  </div>
    <div id="chat-box-content">
        <ul id="chat-message-list" style="list-style: none;">
            <li class="other-message">
                <span>  Other Message</span>
            </li>
            <li class="self-message">
               <span> Self Message </span> 

            </li>
        </ul>
    </div>
    <div id="chat-box-bottom">
      <input type="text" id="chat-message-input">
      <button type="submit" id="send-msg-btn">send</button>
    </div>
</div>

<script>
    let a = true;
 $('#chat-box-head').on('click' , function(){
    
    if(a){
    $('#chat-box-content').css("display" , "none");
    $('#chat-box-bottom').css("display" , "none");
    $('#chat-box').css("height" , "40px");
    $('#chat-box-head').css("height" , "40px");
    a = false;
    }else{
    $('#chat-box-content').css("display" , "block");
    $('#chat-box-bottom').css("display" , "block");
    $('#chat-box').css("height" , "400px");
    $('#chat-box-head').css("height" , "40px");
    a = true;
    }
 })
</script>